<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Server ads</title>
    <script src="socket.io/socket.io.js"></script>
    <script src="jquery-3.1.1.min.js"></script>
    <script type="text/javascript">
      var socket = io();
      $(document).ready(function(){
        $('#sl-quang-cao').on('change',
          function(){
            $('#imgHinhQuangCao').attr('src', $('#sl-quang-cao').val())
          }
        );

        $('#btnSend').click(function(){
          var image = $('#sl-quang-cao').val();
          socket.emit('ADMIN_SEND_NEW_AD', image);
        });
      });
    </script>
    <style media="screen">
      hr{
        visibility: hidden;
      }
    </style>
  </head>
  <body>
    <select id="sl-quang-cao">
      <option>--Chọn hình--</option>
      <%
        ads.forEach(function(ad){
          %><option value="<%=ad.image%>"><%=ad.name%></option><%
        })
      %>
    </select>
    <button id="btnSend">Gui</button>
    <hr/>
    <img id="imgHinhQuangCao" width="200px"/>
  </body>
</html>
